{
  "manifest_version": 3,
  "name": "Random Tab Hopper",
  "version": "1.0.1",
  "description": "Cycles through Firefox tabs randomly or sequentially with timing variance, manual tab lists, and human-intervention stop.",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "Random Tab Hopper"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "human-listener.js"],
      "run_at": "document_start"
    }
  ]
}
